{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Mac",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/.build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Linux",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/.build/${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Windows",
            "command": "C:\\Program\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\.build\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\Program\\mingw64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "APIO2020",
            "command": "/usr/bin/g++",
            "args": [
                // g++ -std=c++11 -o "%problem%" "grader.cpp" "%problem%.cpp" -O2 -lm
                "-std=c++11",
                "-o",
                "${workspaceFolder}/.build/${fileBasenameNoExtension}",
                "${fileDirname}/grader.cpp",
                "${file}",
                "-O2",
                "-lm",
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "group": "build"
        },
    ]
}